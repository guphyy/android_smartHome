<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4F4"
    android:backgroundTint="#DEDEDEDE"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/button_wifi"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:layout_x="243dp"
        android:layout_y="407dp"
        android:background="@drawable/buttonstyle"
        app:srcCompat="@mipmap/wifi" />

    <SearchView
        android:id="@+id/search"
        android:layout_width="322dp"
        android:layout_height="wrap_content"

        android:layout_x="49dp"
        android:layout_y="134dp"
        android:background="#6FCF15"
        android:backgroundTint="#A1BAE6"
        android:orientation="horizontal"
        android:visibility="visible"
        tools:outlineSpotShadowColor="red">

    </SearchView>

    <TextView
        android:id="@+id/List"
        android:layout_width="184dp"
        android:layout_height="46dp"
        android:layout_marginLeft="50dp"
        android:layout_x="110dp"
        android:layout_y="36dp"
        android:gravity="center"
        android:text="设备列表"
        android:textSize="32dp"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="29dp" />

    <ImageButton
        android:id="@+id/Button_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="60dp"
        android:layout_y="240dp"
        android:background="@drawable/buttonstyle"
        app:srcCompat="@mipmap/wendu" />

    <ImageButton
        android:id="@+id/Button_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="240dp"
        android:layout_y="240dp"
        android:background="@drawable/buttonstyle"
        app:srcCompat="@mipmap/xingzhuang" />

    <ImageButton
        android:id="@+id/Button_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="60dp"
        android:layout_y="410dp"
        android:background="@drawable/buttonstyle"
        app:srcCompat="@mipmap/naozhong" />



    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="20dp"
        android:layout_y="550dp"
        android:background="@drawable/buttonstyle"
        android:text="退出登陆" />

    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:gravity="center"
    />

</AbsoluteLayout>